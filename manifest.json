
{
  "name": "Cookie Generator",
  "version": "1.0",
  "description": "Generates cookies on websites that request them for testing purposes.",
  "manifest_version": 2,
  "permissions": [ "cookies" ],
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "content.js" ]
    }
  ],
  "browser_action": {
    "default_title": "Cookie Generator",
    "default_popup": "popup.html"
  }
}