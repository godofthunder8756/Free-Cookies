{
  "name": "Cookie Generator",
  "version": "1.0",
  "description": "Generates cookies on websites that request them for testing purposes.",
  "manifest_version": 3,
  "permissions": [ "cookies" ],
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "content.js" ]
    }
  ],
  "action": {
    "default_title": "Cookie Generator",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}